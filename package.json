{
  "name": "avenue",
  "version": "1.0.0",
  "homepage": "https://avenue.io",
  "author": {
    "name": "Jeremy Thomas",
    "email": "bbxdesign@gmail.com",
    "url": "https://jgthms.com"
  },
  "description": "Modern CSS framework based on Flexbox",
  "main": "avenue.scss",
  "unpkg": "css/avenue.css",
  "style": "css/avenue.min.css",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jgthms/avenue.git"
  },
  "license": "MIT",
  "keywords": [
    "css",
    "sass",
    "scss",
    "flexbox",
    "grid",
    "responsive",
    "framework"
  ],
  "bugs": {
    "url": "https://github.com/jgthms/avenue/issues"
  },
  "devDependencies": {
    "cssnano": "^6.1.0",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "sass": "^1.71.1"
  },
  "scripts": {
    "build-avenue": "sass --style=expanded --source-map avenue.scss css/avenue.css",
    "minify-avenue": "postcss css/avenue.css --no-map --use cssnano --output css/avenue.min.css",
    "version-no-dark-mode": "sass --style=expanded --source-map versions/avenue-no-dark-mode.scss css/versions/avenue-no-dark-mode.css",
    "version-no-helpers": "sass --style=expanded --source-map versions/avenue-no-helpers.scss css/versions/avenue-no-helpers.css",
    "version-no-helpers-prefixed": "sass --style=expanded --source-map versions/avenue-no-helpers-prefixed.scss css/versions/avenue-no-helpers-prefixed.css",
    "version-prefixed": "sass --style=expanded --source-map versions/avenue-prefixed.scss css/versions/avenue-prefixed.min.css",
    "build-versions": "npm run version-no-dark-mode && npm run version-no-helpers && npm run version-no-helpers-prefixed && npm run version-prefixed",
    "minify-versions": "postcss css/versions/*.css --dir css/versions --ext min.css --no-map --use cssnano",
    "build-all": "npm run build-avenue && npm run build-versions",
    "minify-all": "npm run minify-avenue && npm run minify-versions",
    "clean": "rimraf css",
    "deploy": "npm run clean && npm run build-all && npm run minify-all",
    "start": "npm run build-avenue -- --watch"
  },
  "files": [
    "css",
    "sass",
    "versions",
    "avenue.scss",
    "LICENSE",
    "README.md"
  ]
}
